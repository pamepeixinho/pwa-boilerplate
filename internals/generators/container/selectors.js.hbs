import { createSelector } from 'reselect';

/**
 * Direct selector to the {{ camelCase name }} state domain
 */
const select{{ properCase name }}Domain = (state) => state.get('{{ camelCase name }}');

/**
 * Other specific selectors
 */

{{#if wantReduxPack}}
export const makeSelectFoo = () => createSelector(
  select{{ properCase name }}Domain(),
  (substate) => substate.get('foo').toJS()
);
{{else}}
export const makeSelect{{ properCase name }} = () => createSelector(
  select{{ properCase name }}Domain,
  (substate) => substate.toJS()
);
{{/if}}
